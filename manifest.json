{
  "manifest_version": 3,
  "name": "GitHub Releases Kanban",
  "version": "1.0",
  "description": "Displays GitHub releases and issues in a Kanban board.",
  "permissions": [],
  "host_permissions": [],
  "action": {
    "default_title": "GitHub Releases Kanban"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["releases_data.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

