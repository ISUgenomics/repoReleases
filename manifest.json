{
  "manifest_version": 3,
  "name": "GitHub Releases Kanban",
  "version": "1.0",
  "description": "Displays GitHub releases and issues in a Kanban board.",
  "permissions": [],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["releases_data.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

